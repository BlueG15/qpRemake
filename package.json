{
  "name": "qpremake",
  "version": "1.6.0",
  "description": "Remake of the qp engine in ts / js, with moddability in mind",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "node ./lib/testFile.js",
    "build": "IF EXIST \".\\lib\" RD /S /Q \".\\lib\" && tsc",
    "dev": "npm run build && npm run test",
    "prepublishOnly" : "npm run build"
  },
  "type": "commonjs",
  "author": "Blu",
  "license": "ISC",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "chalk": "^5.6.2",
    "date-fns": "^4.1.0",
    "eslint": "^9.33.0",
    "eslint-plugin-jsdoc": "^54.1.1",
    "strip-ansi": "^7.1.2",
    "ansi-regex": "^6.2.2"
  },
  "dependencies": {
    "@rgrove/parse-xml": "^4.2.0",
    "@types/node": "^22.18.8",
    "typescript": "^5.9.2",
    "util": "^0.12.5"
  },
  "eslintConfig": {
    "plugins": [
      "local"
    ]
  },
  "files": [
    "lib",
    "README.md",
    "!lib/data/old/*",
    "!lib/_queenSystem/renderer/sampleRenderers/*",
    "!lib/_queenSystem/testSuite.*",
    "!lib/testFile.*"
  ]
}
